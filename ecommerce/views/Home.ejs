<!--PRDDUCTS SECTION -->
   
<section>
  <div class="container products-wrapper"> 
  <h2 class="prod-category"> Los mas vendidos </h2> 
    <div class="row">
      <% for (producto of masVendidos) { %>  
      <div class="col-12 col-sm-6 col-lg-3">      
        <div class="item">
            <div class="item-inner">
              <a href="/Detalle/<%= producto.id %>">      
                <img width="100%" height="100%" alt="<%= producto.nombre %>" src="./images/<%= producto.image %>"/>             
              </a>
            </div>                                          
            <div class="item-info"> <!-- En CSS main y main6 -->
              <div class="info-inner">  <!-- En CSS main -->
                <div class="item-title"> <!-- En CSS main -->  
                  <a href="/Detalle/<%= producto.id %>"> <%= producto.nombre %>  </a>
                </div>
                  <a> $<%= producto.precio %> </a> 
              </div>
            </div>         
            <div class="action" style="margin-left: auto; margin-right: auto;">
              <a class="button btn-cart" title='Añadir al carrito' data-quantity="1" data-product_id="7121" href='?add-to-cart=7121'>
                <span>Añadir al carrito </span>
              </a>
            </div>
          </div>
      </div>
      <% } %>
  </div> 
  </div>
</section>

<!-- ================= END OF SECTION LOMASVENDIDOS ======================== -->


