
<%- include('partials/header'); %>

<body>

    <%- include('partials/header-navbar'); %> 
     	

       		<div class="product-essential container">
            	<div class="row">
 					<div class="product-img-box col-6">
       					<div class="product-image">
							<img src="../images/<%= verdura.image %>" alt="<%= verdura.nombre %>">
						</div>
					</div>

 					<div class="product-shop col-6">
						<h1><%= verdura.ds_nombre %></h1>

						<div class="price-box price">
							<span>$<%= verdura.dn_precio %></span>
						</div>
						<div>
							<a class="editar" href="/prod/Prod/edit/<%= verdura.id %>"><span>Editar</span></a>
						</div>
					   <div>
              <button id="bprimary" style="margin: 0;" value="Añadir a Carrito" quantity=1 image="<%= verdura.image %>" precio="<%= verdura.dn_precio %>" nombre="<%= verdura.ds_nombre %>" product_id="<%= verdura.id %>" name="anadir" onclick="micarrito(this)">Añadir a Carrito</button>
          </div>  
						<div>
							<form action="/prod/Prod/delete/<%= verdura.id %>?_method=DELETE" method="POST">
								<button type="submit" style="margin-top: 5px;" class="btn btn-danger">Eliminar</button>
							</form>
						</div>
					</div>
				</div>
			</div>




  <div class="tab-description col-11">
  	
	<h3>Acerca de <%= verdura.ds_nombre %></h3>
	<hr>
	<p><%= verdura.ds_descripcion %></p>
</div>


<script type="text/javascript" src="/javascripts/carritoFunction.js"></script>

<%- include('partials/footer'); %>
