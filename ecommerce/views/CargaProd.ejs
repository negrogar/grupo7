<%- include('partials/header'); %>

<body>

	<%- include('partials/header-navbar'); %>

    <!--Formulario-->
    <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h1 class="products-title">Subir nuevo vegetal</h1>
			</div>
		</div>

		<div class="col-12">
			<% if (typeof errors != 'undefined') { %>
						<p style="color: #00B7FF">ERROR</p>
						<ul>
							<% for (let i = 0; i < errors.length; i++) { %>
								<li>
									<%= errors[i].msg %>	
								</li>
						<% } %>
						</ul>
			<% } %>
			<form action="/prod/Prod" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="form-group col-12 col-md-6">
						<label for="name" class="form-label">Vegetal:</label>
						<input type="text" id="name" name="nombre" placeholder="Ej: Zapallo" class="form-control">
					</div>
					<div class="form-group col-12 col-md-6">
						<label for="price" class="form-label">Precio del Vegetal:</label>
						<input type="text" id="price" name="precio" placeholder="Ej: $90" class="form-control">
					</div>
					<div class="form-group col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="descuento" placeholder="Ej: 15%" class="form-control">
					</div>
					<div class="form-group col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="categoria" id="category" class="form-control">
							<option value="">Elegí</option>
							<option value= 2>En oferta</option>
							<option value= 3>Últimos agregados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="productoImagen" class="form-label">Imagen del producto:</label>
						<input type="file" class="form-control" name="productoImagen" id="productoImagen">
					</div>
					<div class="form-group col-12">
						<label for="description" class="form-label">Descipción:</label><br>
						<textarea name="descripcion" id="description" class="form-control"></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="btn btn-success">Guardar</button>
					</div>
				</div>
			</form>
		</div>
    </div>

</body>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="/javascripts/prodFormValidation.js"></script>
<%- include('partials/footer'); %>